{
  "name": "mybatis-next",
  "displayName": "mybatis-next",
  "description": "MyBatis helper for VSCode",
  "version": "0.0.2",
  "publisher": "shiben",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "MyBatis",
    "Mapper",
    "Helper"
  ],
  "bugs": {
    "url": "https://github.com/BenLocal/vscode-mybatis-next/issues",
    "email": "807629978@qq.com"
  },
  "homepage": "https://github.com/BenLocal/vscode-mybatis-next/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/BenLocal/vscode-mybatis-next.git"
  },
  "activationEvents": [
    "onLanguage:java",
    "workspaceContains:*.xml"
  ],
  "main": "./dist/extension.js",
  "icon": "icon.png",
  "files": [
    "dist/**/*",
    "wasm/**/*",
    "README.md",
    "LICENSE.md",
    "icon.png"
  ],
  "contributes": {
    "configuration": [
      {
        "id": "mybatis-next",
				"title": "MyBatis Next",
        "properties": {
          "mybatis-next.java.scanPatterns": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": ".*\\.java$",
              "patternErrorMessage": "Pattern must end with .java"
            },
            "default": ["**/mapper/**/*.java"],
            "description": "Glob patterns for scanning Java mapper files"
          },
          "mybatis-next.java.excludePatterns": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": ["**/node_modules/**", "**/target/**", "**/build/**", "**/.git/**"],
            "description": "Glob patterns to exclude when scanning Java mapper files"
          },
          "mybatis-next.xml.scanPatterns": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": ".*\\.xml$",
              "patternErrorMessage": "Pattern must end with .xml"
            },
            "default": ["**/*.xml"],
            "description": "Glob patterns for scanning XML mapper files, "
          },
          "mybatis-next.xml.excludePatterns": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": ["**/node_modules/**", "**/target/**", "**/build/**", "**/.git/**"],
            "description": "Glob patterns to exclude when scanning XML mapper files"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "mybatis-next.reset",
        "title": "Mybatis.Next: Reset"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build-xml-grammar": "cd node_modules/@tree-sitter-grammars/tree-sitter-xml/xml && npx tree-sitter build --wasm",
    "vsix": "npm install -g vsce && vsce package"
  },
  "devDependencies": {
    "@tree-sitter-grammars/tree-sitter-xml": "^0.7.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^9.36.0",
    "tree-sitter-java": "^0.23.5",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@rimbu/bimap": "^2.0.4",
    "lru-cache": "^11.2.2",
    "p-limit": "^7.2.0",
    "web-tree-sitter": "^0.25.10"
  }
}
